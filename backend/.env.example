# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
GIN_MODE=debug
READ_TIMEOUT=60
WRITE_TIMEOUT=60

# 数据库配置
DB_DRIVER=sqlite
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=
DB_PASSWORD=
DB_DATABASE=mcp_adapter.db
DB_CHARSET=utf8mb4
DB_SSL_MODE=disable
DB_MAX_IDLE=10
DB_MAX_OPEN=100

